<resources>

    <!-- Base application theme. -->
    <style name="TryAndRemoveTheme" parent="TryAndRemoveTheme.Base">

    </style>

    <style name="TryAndRemoveTheme.Base" parent="Theme.AppCompat.Light">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary_main</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent_main</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:divider">@color/divider</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TryAndRemoveTheme.FloatingButton">
        <item name="fab_colorNormal">@color/accent_main</item>
        <item name="fab_colorPressed">@color/accent_dark</item>
    </style>

    <style name="TryAndRemoveTheme.FloatingMenuButton" parent="">
        <item name="fab_addButtonColorNormal">@color/accent_main</item>
        <item name="fab_addButtonColorPressed">@color/accent_dark</item>
        <item name="fab_expandDirection">up</item>
    </style>

    <style name="TryAndRemoveTheme.NavigationDrawer.Title" parent="">
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TryAndRemoveTheme.Toolbar.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@color/primary_text_light</item>
    </style>

    <style name="TryAndRemoveTheme.Toolbar" parent="TryAndRemoveTheme">
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textColorSecondary">@color/primary_text_light</item>
        <item name="drawerArrowStyle">@style/TryAndRemoveTheme.Toolbar.DrawerArrow</item>
    </style>

    <style name="TryAndRemoveTheme.FloatingActionButtonLabel">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="TryAndRemoveTheme.Swipe.Item" parent="">
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TryAndRemoveTheme.Version" parent="">
        <item name="android:textColor">@color/hint</item>
        <item name="android:padding">@dimen/fab_labels_margin</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
