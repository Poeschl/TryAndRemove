<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_launcher_app"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/navigation_drawer_side_offset"
        android:layout_marginLeft="@dimen/navigation_drawer_side_offset"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cell Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/navigation_drawer_title_offset"
        android:layout_marginLeft="@dimen/navigation_drawer_title_offset"
        android:layout_marginEnd="@dimen/navigation_drawer_side_offset"
        android:layout_marginRight="@dimen/navigation_drawer_side_offset" />
</RelativeLayout>